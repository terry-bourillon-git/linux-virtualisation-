  "wlr/taskbar": {
    "format": "{icon}",
    "all-outputs": true,
    "active-first": true,
    "tooltip-format": "{name}",
    "on-click": "activate",
    "on-click-middle": "close",
    "ignore-list": [
      "rofi"
    ]
  },
  "pulseaudio": {
    "format": "{volume}% {icon}",
    "format-muted": " {format_source}",
    "format-icons": {
      "default": [
        "",
        ""
      ]
    }
  },
  "network": {
    "interval" : 1 ,
    "format-wifi": "{essid} ",
    "format-ethernet": " {ifname}",
    "tooltip-format": "{bandwidthTotalOctets}",
    "format-disconnected": "Disconnected ⚠ {ifname}",
    "format-alt": "dl :{bandwidthUpOctets} tr :{bandwidthDownOctets}"
  },
  "backlight": {
      "format": "{icon} {percent}%",
      "format-icons": [
        "",
        "",
        "",
        "",
        "",
        "",
        "",
        "",
        ""
      ]
  },
  "battery": {
    "format": "{icon} {capacity} %",
    "format-charging": " {capacity} %",
    "format-plugged": " {capacity} %",
    "format-alt": "{icon} {time}",
    "format-icons": [
      "",
      "",
      "",
      "",
      ""
      ]
  }
}
